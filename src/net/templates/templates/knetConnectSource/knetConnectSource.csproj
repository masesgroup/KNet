<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<LangVersion>latest</LangVersion>
		<TargetFrameworks>net462;net6.0;net7.0;net8.0</TargetFrameworks>
	</PropertyGroup>
	<ItemGroup Condition="'$(TargetFramework)' == 'net462'">
		<Reference Include="Microsoft.CSharp" />
	</ItemGroup>
	<ItemGroup Condition="Exists('$(ProjectDir)..\..\..\KNet\KNet.csproj')">
		<!--Within GitHub repo: used for test purpose-->
		<ProjectReference Include="$(ProjectDir)..\..\..\KNet\KNet.csproj" />
	</ItemGroup>
	<ItemGroup Condition="!Exists('$(ProjectDir)..\..\..\KNet\KNet.csproj')">
		<!--Outside GitHub repo-->
		<PackageReference Include="MASES.KNet" Version="2.4.1" IncludeAssets="All" PrivateAssets="None" />
	</ItemGroup>
	<ItemGroup>
		<None Update="connect-knet-source.properties">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="connect-standalone.properties">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Dante.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>
